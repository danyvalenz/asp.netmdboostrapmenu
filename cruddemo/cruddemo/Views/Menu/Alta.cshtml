@model cruddemo.Models.MenuLateral

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">

            <div class="mb-4">
                <h4 class="fw-bold text-dark">Configuración de Menú</h4>
                <p class="text-muted small">Crea nuevas opciones para la navegación lateral</p>
            </div>

            <div class="card card-structum border-0 shadow-sm p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Texto" class="form-label fw-bold small">Nombre de la Opción</label>
                            <input asp-for="Texto" class="form-control" placeholder="Ej: Reportes de Venta" />
                            <span asp-validation-for="Texto" class="text-danger x-small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Icono" class="form-label fw-bold small">Icono (FontAwesome class)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-icons"></i></span>
                                <input asp-for="Icono" class="form-control" placeholder="fas fa-chart-line" />
                            </div>
                            <span asp-validation-for="Icono" class="text-danger x-small"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="ParentId" class="form-label fw-bold small">Menú Superior (Opcional)</label>
                            <select asp-for="ParentId" class="form-select" asp-items="ViewBag.ParentId">
                                <option value="">-- Es un menú principal --</option>
                            </select>
                            <div class="form-text x-small">Selecciona uno si quieres que esta opción sea un submenú.</div>
                        </div>

                        <hr class="my-4 opacity-5">

                        <div class="col-md-6">
                            <label asp-for="Controller" class="form-label fw-bold small">Controlador</label>
                            <input asp-for="Controller" class="form-control" placeholder="Home" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Action" class="form-label fw-bold small">Acción</label>
                            <input asp-for="Action" class="form-control" placeholder="Index" />
                        </div>

                       

                        <div class="col-12 mt-4 d-flex justify-content-end gap-2">
                            <a asp-action="/" class="btn btn-light rounded-3 px-4">Cancelar</a>
                            <button type="submit" class="btn btn-primary rounded-3 px-4 shadow-0">
                                <i class="fas fa-save me-2"></i>Guardar Opción
                            </button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>