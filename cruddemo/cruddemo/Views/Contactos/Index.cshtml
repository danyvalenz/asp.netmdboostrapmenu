@model IEnumerable<cruddemo.Models.Contacto>

@{
    ViewData["Title"] = "Gestión de Contactos";
}
<div class="container-fluid px-lg-5 mt-6">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0">Directorio de Contactos</h3>
            <p class="text-muted">Administra la información de tus clientes y socios.</p>
        </div>
        <a asp-action="NuevoContacto" class="btn btn-primary btn-rounded shadow-2">
            <i class="fas fa-plus me-2"></i> Nuevo Contacto
        </a>
    </div>

    <div class="card border-0 shadow-1-soft" style="border-radius: 15px;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 bg-white">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Nombre</th>
                            <th>Teléfono</th>
                            <th>Email</th>
                            <th>Fecha Registro</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white me-3">
                                            @item.Nombre.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <p class="fw-bold mb-1">@item.Nombre</p>
                                            <small class="text-muted">ID: #@item.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-success rounded-pill d-inline">@item.Telefono</span>
                                </td>
                                <td>@item.Correo</td>
                                <td>@item.FechaCreacion.ToShortDateString()</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-sm text-primary px-2">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link btn-sm text-info px-2">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link btn-sm text-danger px-2">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
